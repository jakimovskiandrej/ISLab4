@{
}
@model List<BookApplication.Domain.DomainModels.BookDTO>


<div class="container">


    <div class="row m-5">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        AuthorFirstName
                    </th>
                    <th>
                        AuthorLastName
                    </th>
                    <th>
                        IsbnCode
                    </th>
                    <th>
                        ShortDescription
                    </th>
                    <th>
                        PublishedYear
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        PageCount
                    </th>
                    <th>
                        Language
                    </th>
                    <th>
                        AvailabilityStatus
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.AuthorFirstName
                        </td>
                        <td>
                            @item.AuthorLastName
                        </td>
                        <td>
                            @item.IsbnCode
                        </td>
                        <td>
                            @item.ShortDescription
                        </td>
                        <td>
                            @item.PublishedYear
                        </td>
                        <td>
                            @item.Rating
                        </td>
                        <td>
                            @item.Genre
                        </td>
                        <td>
                            @item.PageCount
                        </td>
                        <td>
                            @item.Language
                        </td>
                        <td>
                            @item.AvailabilityStatus
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
